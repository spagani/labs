# Comandos para configurar R1

set interfaces ethernet eth0 address 'dhcp'
set interfaces ethernet eth0 description 'OUTSIDE'
set interfaces ethernet eth1 address '198.51.100.1/24'
set interfaces ethernet eth1 description 'INSIDE'
set interfaces ethernet eth2 address '192.0.2.1/24'
set interfaces ethernet eth2 description 'INSIDE'
set interfaces loopback lo address '1.1.1.1/32'
set nat source rule 1 outbound-interface 'eth0'
set nat source rule 1 source address '192.0.2.0/24'
set nat source rule 1 translation address 'masquerade'
set nat source rule 2 outbound-interface 'eth0'
set nat source rule 2 source address '198.51.100.0/24'
set nat source rule 2 translation address 'masquerade'
set nat source rule 3 outbound-interface 'eth0'
set nat source rule 3 source address '172.16.16.0/24'
set nat source rule 3 translation address 'masquerade'
set nat source rule 4 outbound-interface 'eth0'
set nat source rule 4 source address '192.168.10.0/24'
set nat source rule 4 translation address 'masquerade'
set protocols rip network '192.168.1.0/24'
set protocols rip network '192.0.2.0/24'
set protocols rip network '198.51.100.0/24'
set protocols rip redistribute 'connected'
